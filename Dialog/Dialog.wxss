.dialog {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%; 
  z-index: 1;
}
  
.dialog-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.3);
}

.dialog-layer {
  position: absolute;
  background: transparent;
  top: 50%;    
  display: flex;
  flex-direction: column;
  z-index: 1;   
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.4); 
  width: 80%; 
  transform: translate3d(-50%, -50%, 0);
  left: 50%;
}
  
.dialog-header {
  background: #ffffff;
  color: #212F3D;
  padding: 20rpx;
  font-size: 35rpx;
  text-align: center;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border-bottom: 1rpx solid #E5E7E9;
}

.dialog-body {
  flex: 1;  
  padding: 20rpx 40rpx;
  background: #ffffff;  
  font-size: 30rpx;
  color: #566573;
  letter-spacing: 2rpx;
}

.dialog-footer {
  background: #ffffff;
  flex-direction: row;
  display: flex;
  align-items: center;
  width: 100%;  
  border-top: 1rpx solid #E5E7E9;   
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;  
}

.btn { 
  flex: 1; 
  text-align: center;   
  font-size: 30rpx;
  color:#212F3D;
  padding: 19rpx 5rpx;
}

.btn-default {
  border-right: 1px solid #E5E7E9;
}

.btn-primary {
  color: #000000;   
}